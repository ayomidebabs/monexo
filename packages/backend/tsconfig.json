{
  "compilerOptions":{
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "types": ["node", "express"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
 "typeRoots": ["./node_modules/@types", "./src/types"],
}